<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterActivity"
    android:background="@color/black">


    <TextView
        android:id="@+id/registerAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntubold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Register">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/registerCardView"
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:layout_below="@+id/registerAppName"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/cardColorYellow"
        app:cardCornerRadius="7dp">


        <TextView
            android:id="@+id/NameTVReg"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhareImage"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ubuntubold"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/NameETReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameTVReg"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            android:cursorVisible="true"
            android:fontFamily="@font/ubunturegular"
            android:hint="Enter your name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="textCapWords"
            android:textSize="15sp"
            tools:targetApi="o" />


        <TextView
            android:id="@+id/EmailTVReg"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameETReg"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/ubuntubold"
            android:text="Email ID"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/EmailETReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EmailTVReg"
            android:inputType="textEmailAddress"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="150dp"
            android:cursorVisible="true"
            android:hint="Enter an Email ID"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:targetApi="o"

            />

        <TextView
            android:id="@+id/PasswordTVReg"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EmailETReg"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/ubuntubold"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/PasswordETReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PasswordTVReg"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="240dp"
            android:cursorVisible="true"
            android:inputType="textPassword"
            android:hint="Enter a password"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:targetApi="o"
            android:fontFamily="@font/ubunturegular"


            />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/createAccBtnReg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/registerCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/ubuntubold"
        android:gravity="center"
        android:text="Create an account"
        android:textSize="17sp"
        tools:targetApi="o" />


    <TextView
        android:id="@+id/alreadyHaveAnAcc"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAccBtnReg"
        android:layout_marginTop="30dp"
        android:text="Already have an Account?"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/ubunturegular"
        />





</RelativeLayout>